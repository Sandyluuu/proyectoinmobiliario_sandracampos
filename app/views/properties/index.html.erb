
<%= link_to "Nueva propiedad", new_property_path, class: "btn btn-primary mb-3" %>

<div class="container mt-4">
  <div class="row">
   
      <p class="text-success"><%= notice %></p>
      <h1 class="mb-4">Propiedades</h1>

      <div id="properties">
        <% @properties.each_slice(2) do |property_group| %>
          <div class="row mb-4">
            <% property_group.each do |property| %>
              <div class="col">
                <%= render property %>
                <div class="text-center">
                  <%= link_to "Mostrar propiedad", property, class: "btn btn-info mt-2" %>
                </div>
              </div>
            <% end %>
          </div>
        <% end %>

        <div class="d-flex justify-content-center mt-3">
              <%== pagy_nav(@pagy) %>
        </div>
      </div>
    
  </div>
</div>




