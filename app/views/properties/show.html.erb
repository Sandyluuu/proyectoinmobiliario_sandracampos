<div class="container mt-4">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <p class="text-success"><%= notice %></p>

      <%= image_tag @property.image_url, class: "img-fluid mb-3" %>

      <%= render @property %>

      <div class="mt-3">
        <%= link_to "Editar esta propiedad", edit_property_path(@property), class: "btn btn-primary mr-2" %>
        <%= link_to "Volver a las propiedades", properties_path, class: "btn btn-secondary mr-2" %>
        <%= button_to "Eliminar esta propiedad", @property, method: :delete, data: { confirm: "¿Estás seguro?" }, class: "btn btn-danger" %>
      </div>
    </div>
  </div>
</div>
